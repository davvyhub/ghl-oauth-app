<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Contacts Dashboard</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
    }
    h2 {
      margin-top: 40px;
      color: #333;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
    }
    th, td {
      padding: 10px;
      border: 1px solid #ccc;
      text-align: left;
    }
    th {
      background-color: #f0f0f0;
    }
  </style>
</head>
<body>
  <h1>ðŸ“‹ Contacts by Location</h1>

  <% if (contacts.length === 0) { %>
    <p>No contacts found.</p>
  <% } else { 
      const grouped = {};
      contacts.forEach(contact => {
        const loc = contact.locationName || 'Unknown Location';
        if (!grouped[loc]) grouped[loc] = [];
        grouped[loc].push(contact);
      });

      Object.keys(grouped).forEach(location => { %>
        <h2><%= location %></h2>
        <table>
          <thead>
            <tr>
              <th>Contact Name</th>
              <th>Email</th>
              <th>Phone</th>
            </tr>
          </thead>
          <tbody>
            <% grouped[location].forEach(contact => { %>
              <tr>
                <td><%= contact.name %></td>
                <td><%= contact.email || 'â€”' %></td>
                <td><%= contact.phone || 'â€”' %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
  <%   });
     } %>
</body>
</html>
