<!DOCTYPE html>
<html>
<head>
  <title>GHL Contacts Dashboard</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
    }

    table {
      border-collapse: collapse;
      width: 100%;
    }

    th, td {
      text-align: left;
      padding: 10px;
      border: 1px solid #ddd;
    }

    th {
      background-color: #f4f4f4;
    }

    h1 {
      color: #333;
    }
  </style>
</head>
<body>
  <h1>ðŸ“‡ Contacts from GoHighLevel</h1>

  <% if (contacts && contacts.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>Full Name</th>
          <th>Email</th>
          <th>Phone</th>
        </tr>
      </thead>
      <tbody>
        <% contacts.forEach(contact => { %>
          <tr>
            <td><%= contact.firstName %> <%= contact.lastName %></td>
            <td><%= contact.email || 'N/A' %></td>
            <td><%= contact.phone || 'N/A' %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p>No contacts available.</p>
  <% } %>
</body>
</html>
